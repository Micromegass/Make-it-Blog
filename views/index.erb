
<h1>Make it Blog</h1>


<table class="table ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Titulo</th>
      <th scope="col">Description</th>
      <th scope="col"> Link</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
        <td> <%= post.title %> </td>
        <td> <%= post.body %> </td>
        <td> <a href="/post/<%= post.id %>"> Show </a> </td>
        <% end %>
    </tr>
  </tbody>
</table>
<p> The number of posts is <%= @posts.count %> </p>

<a href="/post"> Create a Post </a>
